<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chip_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChipExampleActivity">

    <!-- first line -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <edu.ben.materialchip.ChipView
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:label="Chip 1"
            app:hasAvatarIcon="false"
            app:deletable="false"/>

        <edu.ben.materialchip.ChipView
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:label="Chip 2"
            app:hasAvatarIcon="false"
            app:deletable="true"/>

        <edu.ben.materialchip.ChipView
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:label="Chip 3"
            app:avatarIcon="@drawable/avatar"
            app:deletable="true" />
    </LinearLayout>

    <!-- second line -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <edu.ben.materialchip.ChipView
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:label="Chip 4"
            app:hasAvatarIcon="false"
            app:deletable="false"/>

        <edu.ben.materialchip.ChipView
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:label="Chip 5"
            app:hasAvatarIcon="false"
            app:deletable="true"/>

        <edu.ben.materialchip.ChipView
            android:id="@+id/chip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:label="Chip 6"
            app:avatarIcon="@drawable/avatar"
            app:deletable="true" />

    </LinearLayout>

</LinearLayout>
