<?xml version="1.0" encoding="utf-8"?>
<edu.ben.materialchip.views.ScrollViewMaxHeight xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    app:maxHeight="150dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chips_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        tools:listitem="@layout/chip_view" />

</edu.ben.materialchip.views.ScrollViewMaxHeight>


